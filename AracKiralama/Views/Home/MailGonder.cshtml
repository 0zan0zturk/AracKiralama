<!--section start-->
<section class="contact-page section-b-space">
    <div class="container">
        
        <div class="row section-b-space">
             <div class="col-lg-7 map">
                <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3046.6297173966364!2d28.359201019106827!3d40.21729895533621!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x14b5e130be853c01%3A0xd65f1c97f0893614!2zUnVuZ3XFn3BhxZ9hIENhbWk!5e0!3m2!1str!2sus!4v1720537694814!5m2!1str!2sus" width="600" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
            </div>
            
            <div class="col-lg-5">
                <div class="contact-right">
                    <ul>
                        <li>
                            <div class="contact-icon">
                                <img src="../assets/images/icon/phone.png"
                                     alt="Generic placeholder image">
                                <h6>Bize Ulaşın!</h6>
                            </div>
                            <div class="media-body">
                                <p>0 (555) 555 55 55</p>
                                <p>0 (224) 222 22 22</p>
                            </div>
                        </li>
                        <li>
                            <div class="contact-icon">
                                <i class="fa fa-map-marker" aria-hidden="true"></i>
                                <h6>Adres</h6>
                            </div>
                            <div class="media-body">
                                <p>Tabaklar Mahallesi Sümbül Sokak Karacabey/BURSA</p>
                                <p>Türkiye 16700</p>
                            </div>
                        </li>
                        <li>
                            <div class="contact-icon">
                                <img src="../assets/images/icon/email.png"
                                     alt="Generic placeholder image">
                                <h6>Mail Adresi</h6>
                            </div>
                            <div class="media-body">
                                <p>ozturk6926@gmail.com</p>
                                <p>info@ozturk6926.com</p>
                            </div>
                        </li>
                        <li>
                            <div class="contact-icon">
                                <i class="fa fa-fax" aria-hidden="true"></i>
                                <h6>Fax</h6>
                            </div>
                            <div class="media-body">
                                <p>Support@Shopcart.com</p>
                                <p>info@shopcart.com</p>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        @if(ViewBag.DesenKontrolSonucu != null){
            <div class="alert-info text-center alert">@ViewBag.DesenKontrolSonucu </div>
        }
        <div class="row">
            <div class="col-sm-12">
                <form class="theme-form" method="post" asp-action="MailGonder" asp-controller="Home">
                    @Html.AntiForgeryToken()
                    <div class="form-row row">
                        <div class="col-md-6">
                            <label for="name">Ad</label>
                            <input type="text" class="form-control" id="Ad" name="Ad" placeholder="Ad"
                                   required="">
                        </div>
                        <div class="col-md-6">
                            <label for="email">Soyad</label>
                            <input type="text" class="form-control" id="Soyad" name="Soyad" placeholder="Soyad" required="">
                        </div>
                        <div class="col-md-6">
                            <label for="review">Telefon</label>
                            <input type="number" class="form-control" id="Telefon" name="Telefon" placeholder="Telefon"
                                   required="">
                        </div>
                        <div class="col-md-6">
                            <label for="email">E-Posta</label>
                            <input type="email" class="form-control" id="ePosta" name="ePosta" placeholder="E-Posta" required="">
                        </div>
                        <div class="col-md-12">
                            <label for="Baslik">Başlık</label>
                            <input type="text" class="form-control" id="Baslik" name="Baslik" placeholder="Baslik" required="">
                        </div>
                        <div class="col-md-12">
                            <label for="review">Lütfen mesajınızı giriniz</label>
                            <textarea class="form-control" placeholder="Mesaj"
                                      id="Mesaj" name="Mesaj" rows="6"></textarea>
                        </div>
                        <div class="col-md-12">
                            <button class="btn btn-solid" type="submit">Mesajı Gönder</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>
<!--Section ends-->
