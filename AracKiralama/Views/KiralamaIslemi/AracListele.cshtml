@model IEnumerable<AracKiralama.Models.Arac>
<h3>Araç Listesi</h3>

<section class="section-b-space ratio_asos">

    <div class="container">
        <div class="row mordern-box-margin">
            @{
                foreach (var aracBilgi in Model)
                {
                    <div class="col-lg-4 col-6">
                        <div class="mordern-box">

                            <div class="absolute-img">
                                <img src="~/aracImg/@aracBilgi.AracFotograf" class="img-fluid" alt="@aracBilgi.AracFotograf">
                            </div>
                            <div class="mordern-content">
                                <a href="product-page(no-sidebar).html">
                                    <h6>@aracBilgi.AracMarka - @aracBilgi.AracModel</h6>
                                </a>
                                <p>
                                    @aracBilgi.AracMarka marka @aracBilgi.AracModel model aracımız   olup
                                    @aracBilgi.AracSanziman şanzımana sahiptir. Kullandığı yakıt @aracBilgi.AracYakit
                                </p>
                                <div class="mordern-bottom">
                                    <div class="left">
                                        <h4>@aracBilgi.GunlukFiyat <del>@(aracBilgi.GunlukFiyat * 1.44)</del></h4>
                                    </div>
                                    <div class="right">
                                        <div class="add-extent d-none d-md-block">
                                            <i class="fa fa-plus animated-btn"></i>
                                            <div class="options">
                                                <ul>
                                                    <li>
                                                        <button data-bs-toggle="modal" data-bs-target="#addtocart"
                                                                title="Add to cart">
                                                            <i class="ti-shopping-cart"></i>
                                                        </button>
                                                    </li>
                                                    <li>
                                                        <a href="javascript:void(0)" title="Add to Wishlist">
                                                            <i class="ti-heart" aria-hidden="true"></i>
                                                        </a>
                                                    </li>
                                                    <li>
                                                        <a href="#" data-bs-toggle="modal" data-bs-target="#quick-view"
                                                           title="Quick View">
                                                            <i class="ti-search"
                                                               aria-hidden="true"></i>
                                                        </a>
                                                    </li>
                                                    <li>
                                                        <a href="compare.html" title="Compare">
                                                            <i class="ti-reload"
                                                               aria-hidden="true"></i>
                                                        </a>
                                                    </li>
                                                </ul>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>
    </div>
</section>