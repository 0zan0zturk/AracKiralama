@model AracKiralama.Models.Musteri

@{
    ViewData["Title"] = "Profilim";
}

<h1>Profil Bilgileri</h1>

<img class="rounded-circle" style="height:200px" src="~/assets/images/pps/@Model?.ProfilFotografi" />
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Tc No:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MusteriTc)
        </dd>
        <dt class="col-sm-2">
            Ad:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MusteriAd)
        </dd>
        <dt class="col-sm-2">
            Soyad:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MusteriSoyad)
        </dd>
        <dt class="col-sm-2">
            Telefon:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Telefon)
        </dd>
        <dt class="col-sm-2">
            E-Posta
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EPosta)
        </dd>
        <dt class="col-sm-2">
            Doğum Tarihi:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MusteriDogTar)
        </dd>
        <dt class="col-sm-2">
            Adres:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MusteriAdres)
        </dd>
        <dt class="col-sm-2">
            Kiraladığı Araç
        </dt>
        @if (@ViewBag.SonArac != null)
        {
            <dd class="col-sm-10">
                @ViewBag.SonArac
            </dd>
        }
        else
        {
            <dd class="col-sm-10">
                Henüz Araç Kiralamadınız
            </dd>
        }

    </dl>
</div>
<div>
    <a class="btn btn-solid me-3" asp-action="Duzenle" asp-route-id="@Model?.Id">Profili Düzenle</a>
    <a class="btn btn-outline me-3" asp-action="SifreDegistir" asp-route-id="@Model?.Id">Şifreyi değiştir</a><br /><br />
    <a class="btn btn-solid btn-sm btn-xs me-3" asp-action="HesapSil1" asp-route-id="@Model?.Id">Hesabımı Sil</a>
</div>
